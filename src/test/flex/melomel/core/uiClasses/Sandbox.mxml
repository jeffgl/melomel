<?xml version="1.0" encoding="utf-8"?>
<s:Application
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns="melomel.core.uiClasses.*"
>

	<fx:Script>
		<![CDATA[

			private function labelFunction( item: * ): String
			{
				//if ( item.attributey( "lima" ) ) return item.lima;

				return ( item as XML ).@lima;
			}

		]]>
	</fx:Script>

	<!-- Halo menu bar and menus using label
		 field for menu bar item labels -->
	<s:VGroup id="mbWithLabels" left="10" right="10" top="10" bottom="10">
		<mx:MenuBar labelField="@label">
			<fx:XMLList>
				<menuitem label="alpha"></menuitem>
				<menuitem label="bravo"></menuitem>
				<menuitem label="charlie"></menuitem>
				<menuitem label="delta"></menuitem>
			</fx:XMLList>
		</mx:MenuBar>
	</s:VGroup>

	<!-- Halo menu bar and menus using label
		 function rather than label property -->
	<s:VGroup id="mbWithLabelFunction" left="10" right="10" top="10" bottom="10">
		<mx:MenuBar labelFunction="{labelFunction}">
			<fx:XMLList>
				<menuitem lima="alpha"></menuitem>
				<menuitem lima="bravo"></menuitem>
				<menuitem lima="charlie"></menuitem>
				<menuitem lima="delta"></menuitem>
			</fx:XMLList>
		</mx:MenuBar>
	</s:VGroup>


	<!-- Spark menu bar and menus -->

	<s:VGroup id="container">
		<s:HGroup id="subcontainer">
			<s:Button id="button1"
				width="100" height="20"
				doubleClickEnabled="true" label="Click Me"
			/>
			<s:TextInput id="textInput1"/>
		</s:HGroup>
	</s:VGroup>

	<s:Button id="button2" label="Click Me"/>

	<!-- Halo labeled component -->
	<s:VGroup>
		<mx:Label text="Foo Field"/>
		<mx:TextInput id="fooField"/>
	</s:VGroup>

	<!-- Spark labeled component -->
	<s:VGroup>
		<s:Label text="Bar Field"/>
		<s:TextInput id="barField"/>
	</s:VGroup>

	<!-- Invalid labeled component -->
	<s:VGroup>
		<s:VGroup>
			<mx:Label text="Baz Field"/>
		</s:VGroup>
		<mx:TextInput id="bazField"/>
	</s:VGroup>

	<!-- Labeled label component -->
	<s:VGroup>
		<mx:Label text="First Name"/>
		<mx:Label id="firstNameLabel"/>
	</s:VGroup>

	<mx:Form>
		<mx:FormItem label="Lucky Number">
			<mx:TextInput id="formItemTextInput"/>
		</mx:FormItem>
	</mx:Form>

	<mx:TabNavigator creationPolicy="all">
		<TestTab id="tab0"/>
		<TestTab id="tab1"/>
		<TestTab id="tab2"/>
	</mx:TabNavigator>
</s:Application>
